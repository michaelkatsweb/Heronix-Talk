<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.heronix.admin.controller.UserManagementController"
      spacing="20" styleClass="content-view">

    <!-- Toolbar -->
    <HBox spacing="15" alignment="CENTER_LEFT" styleClass="toolbar">
        <TextField fx:id="searchField" promptText="Search users..." prefWidth="300" styleClass="text-field-dark"/>
        <Button text="Search" onAction="#handleSearch" styleClass="btn-secondary"/>

        <Region HBox.hgrow="ALWAYS"/>

        <ComboBox fx:id="statusFilter" promptText="Filter by status" prefWidth="150" styleClass="combo-dark"/>
        <ComboBox fx:id="roleFilter" promptText="Filter by role" prefWidth="150" styleClass="combo-dark"/>

        <Button text="Add User" onAction="#handleAddUser" styleClass="btn-primary">
            <graphic>
                <Label text="+" styleClass="btn-icon"/>
            </graphic>
        </Button>
    </HBox>

    <!-- Users Table -->
    <TableView fx:id="usersTable" VBox.vgrow="ALWAYS" styleClass="table-dark">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="60">
                <cellValueFactory><PropertyValueFactory property="id"/></cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="usernameColumn" text="Username" prefWidth="120">
                <cellValueFactory><PropertyValueFactory property="username"/></cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="displayNameColumn" text="Display Name" prefWidth="150">
                <cellValueFactory><PropertyValueFactory property="displayName"/></cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="emailColumn" text="Email" prefWidth="200">
                <cellValueFactory><PropertyValueFactory property="email"/></cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="departmentColumn" text="Department" prefWidth="120">
                <cellValueFactory><PropertyValueFactory property="department"/></cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="statusColumn" text="Status" prefWidth="100">
                <cellValueFactory><PropertyValueFactory property="status"/></cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="rolesColumn" text="Roles" prefWidth="150"/>
            <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="200"/>
        </columns>

        <placeholder>
            <Label text="No users found" styleClass="table-placeholder"/>
        </placeholder>
    </TableView>

    <!-- Pagination -->
    <HBox alignment="CENTER" spacing="10">
        <Label fx:id="pageInfoLabel" text="Showing 0 users" styleClass="page-info"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Pagination fx:id="pagination" maxPageIndicatorCount="5" styleClass="pagination-dark"/>
    </HBox>

</VBox>
